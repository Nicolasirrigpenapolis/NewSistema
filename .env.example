# Banco de Dados
SA_PASSWORD=ChangeMe123!
MDFE_DB_CONN=Server=sqlserver,1433;Database=MDFeSystem;User Id=sa;Password=ChangeMe123!;TrustServerCertificate=True;Encrypt=False;MultipleActiveResultSets=True;Connection Timeout=15;Pooling=true;Min Pool Size=5;Max Pool Size=100;
